<!-- Enable proper document rendering -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- Specify the base URL -->
<base href="{{ siteData.baseURL }}" />

<!-- Allow loading resources from self -->
<!-- Allow loading images from the CND of the Epic Games Store -->
<!-- Allow loading scripts from GoatCounter -->
<!-- Allow unsafe inlined scripts during development (required by browsersync) -->
<!-- Allow websocket connections during development (required by browsersync) -->
<meta
    http-equiv="Content-Security-Policy"
    content="
        default-src {{ siteData.host }};
        img-src {{ siteData.host }} https://cdn1.epicgames.com;
        script-src {{ siteData.host }} https://gc.zgo.at {{#if siteData.isDevelopment}} 'unsafe-inline' {{/if}};
        {{#if siteData.isDevelopment}}
        connect-src ws: {{ siteData.host }};
        {{/if}}"
>

<!-- Send the origin, path, and querystring in Referer when the protocol security level stays the same or improves -->
<meta name="referrer" content="no-referrer-when-downgrade">

<!-- Prefetch DNS records for the CDN -->
<link rel="dns-prefetch" href="https://cdn1.epicgames.com">

<!-- Analytics via GoatCounter -->
<script data-goatcounter="https://erri120.goatcounter.com/count" async src="https://gc.zgo.at/count.js"></script>

<!-- Add assets -->
<script defer src="{{ siteData.baseURL }}/assets/displayLocalDateTime.js"></script>

<!-- Allow search engine crawling and indexing -->
<meta name="robots" content="all">
<meta name="googlebot" content="all">

<!-- Disable sitelinks search boxes on Google -->
<meta name="google" content="nositelinkssearchbox">

<!-- Disable google trying to translate this document -->
<meta name="google" content="notranslate">

<!-- Disables automatic detection and formatting of possible phone numbers -->
<meta name="format-detection" content="telephone=no">

<!-- Identifies the software used to build the document -->
<meta name="generator" content="{{ siteData.generator }}">

<!-- Speciy the canonical URL of the page -->
<link rel="canonical" href="{{ metadata.canonicalURL }}" />

