<!doctype html>
<html lang="en">
<head>
    {{#> header }}
    <title>{{ data.id }} | {{ siteData.baseTitle }}</title>
    <meta name="descrption" content="List of all items in the namespace '{{data.id }}' ({{ data.urlSlug }}).">
    {{/header}}
</head>
<body>
<a href="{{ siteData.baseURL }}/index.html">Back</a>

{{#with data}}
    <h1>URL Slug: <a href="https://store.epicgames.com/en-US/p/{{ urlSlug }}">{{ urlSlug }}</a></h1>

    <table>
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Categories</th>
            </tr>
        </thead>
        <tbody>
        {{#each items}}
            <tr>
                <td><a href="{{ ../../siteData.baseURL }}/namespaces/{{ ../id }}/{{ id }}.html">{{ id }}</a></td>
                <td>{{ title }}</td>
                <td>{{ categories }}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{/with}}
{{> footer }}
</body>
</html>
